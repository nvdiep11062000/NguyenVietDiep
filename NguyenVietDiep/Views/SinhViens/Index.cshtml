@model IEnumerable<NguyenVietDiep.Models.SinhVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label>Mã sinh viên</label>
        </th>
        <th>
            <label>Họ và tên</label>
        </th>
        <th>
            <label>Mã lớp</label>
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaSinhVien)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HoTen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MaLop)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MaSinhVien }) |
        @Html.ActionLink("Details", "Details", new { id = item.MaSinhVien }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MaSinhVien })
    </td>
</tr>
}

</table>
